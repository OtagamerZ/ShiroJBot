<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="shiro_remote">

        <!-- provedor/implementacao do JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- entidade mapeada -->
        <class>com.kuuhaku.model.persistent.GuildConfig</class>
        <class>com.kuuhaku.model.persistent.Member</class>
        <class>com.kuuhaku.model.persistent.CustomAnswers</class>
        <class>com.kuuhaku.model.persistent.Tags</class>
        <class>com.kuuhaku.model.persistent.PermaBlock</class>
        <class>com.kuuhaku.model.persistent.MonthWinner</class>
        <class>com.kuuhaku.model.persistent.PixelCanvas</class>
        <class>com.kuuhaku.model.persistent.Votes</class>
        <class>com.kuuhaku.model.persistent.Log</class>
        <class>com.kuuhaku.model.persistent.Backup</class>
        <class>com.kuuhaku.model.persistent.Token</class>
        <class>com.kuuhaku.model.persistent.GlobalMessage</class>
        <class>com.kuuhaku.model.persistent.AppUser</class>
        <class>com.kuuhaku.model.persistent.Campaign</class>
        <class>com.kuuhaku.model.persistent.Account</class>
        <class>com.kuuhaku.model.persistent.Slots</class>
        <class>com.kuuhaku.model.persistent.DevRating</class>
        <class>com.kuuhaku.handlers.games.kawaigotchi.Kawaigotchi</class>
        <class>com.kuuhaku.model.persistent.Version</class>
        <class>com.kuuhaku.model.persistent.MutedMember</class>
        <class>com.kuuhaku.model.persistent.Quiz</class>
        <class>com.kuuhaku.model.persistent.AnsweredQuizzes</class>

        <properties>
            <!-- dados da conexao -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!--  propriedades do hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.format_sql" value="true"/>

            <!--  propriedade do C3P0 -->
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="4"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <property name="hibernate.c3p0.preferredTestQuery" value="SELECT 1"/>
            <property name="hibernate.c3p0.testConnectionOnCheckout" value="true"/>

            <!--  atualiza o banco, gera as tabelas se for preciso -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>

    <persistence-unit name="shiro_local">

        <!-- provedor/implementacao do JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- entidade mapeada -->
        <class>com.kuuhaku.model.persistent.GuildConfig</class>
        <class>com.kuuhaku.model.persistent.Member</class>
        <class>com.kuuhaku.model.persistent.CustomAnswers</class>
        <class>com.kuuhaku.model.persistent.Tags</class>
        <class>com.kuuhaku.model.persistent.PermaBlock</class>
        <class>com.kuuhaku.model.persistent.AppUser</class>
        <class>com.kuuhaku.handlers.games.kawaigotchi.Kawaigotchi</class>

        <properties>
            <!-- dados da conexao -->
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>

            <!--  propriedades do hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect"/>
            <property name="hibernate.format_sql" value="true"/>

            <!--  propriedade do C3P0 -->
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="1"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <property name="hibernate.c3p0.preferredTestQuery" value="SELECT 1"/>
            <property name="hibernate.c3p0.testConnectionOnCheckout" value="true"/>

            <!--  atualiza o banco, gera as tabelas se for preciso -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>