<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="main">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- SHIRO -->
        <class>com.kuuhaku.model.persistent.shiro.Anime</class>
        <class>com.kuuhaku.model.persistent.shiro.Card</class>
        <class>com.kuuhaku.model.persistent.shiro.GlobalProperty</class>
        <class>com.kuuhaku.model.persistent.shiro.Giftcode</class>
        <class>com.kuuhaku.model.persistent.shiro.ScriptMetrics</class>
        <class>com.kuuhaku.model.persistent.shiro.CommandMetrics</class>

        <!-- GUILD -->
        <class>com.kuuhaku.model.persistent.guild.GoodbyeSettings</class>
        <class>com.kuuhaku.model.persistent.guild.GuildConfig</class>
        <class>com.kuuhaku.model.persistent.guild.GuildSettings</class>
        <class>com.kuuhaku.model.persistent.guild.LevelRole</class>
        <class>com.kuuhaku.model.persistent.guild.WelcomeSettings</class>
        <class>com.kuuhaku.model.persistent.guild.StarredMessage</class>
        <class>com.kuuhaku.model.persistent.guild.CustomAnswer</class>
        <class>com.kuuhaku.model.persistent.guild.AutoRule</class>

        <!-- USER -->
        <class>com.kuuhaku.model.persistent.user.Account</class>
        <class>com.kuuhaku.model.persistent.user.AccountSettings</class>
        <class>com.kuuhaku.model.persistent.user.DynamicProperty</class>
        <class>com.kuuhaku.model.persistent.user.UserItem</class>
        <class>com.kuuhaku.model.persistent.user.Kawaipon</class>
        <class>com.kuuhaku.model.persistent.user.Profile</class>
        <class>com.kuuhaku.model.persistent.user.ProfileSettings</class>
        <class>com.kuuhaku.model.persistent.user.Transaction</class>
        <class>com.kuuhaku.model.persistent.user.StashedCard</class>
        <class>com.kuuhaku.model.persistent.user.AccessToken</class>
        <class>com.kuuhaku.model.persistent.user.Title</class>
        <class>com.kuuhaku.model.persistent.user.AccountTitle</class>
        <class>com.kuuhaku.model.persistent.user.Warn</class>
        <class>com.kuuhaku.model.persistent.user.MarketOrder</class>
        <class>com.kuuhaku.model.persistent.user.Reminder</class>
        <class>com.kuuhaku.model.persistent.user.SBreachLeaderboard</class>

        <!-- SHOUKAN -->
        <class>com.kuuhaku.model.persistent.shoukan.Deck</class>
        <class>com.kuuhaku.model.persistent.shoukan.Evogear</class>
        <class>com.kuuhaku.model.persistent.shoukan.Field</class>
        <class>com.kuuhaku.model.persistent.shoukan.Senshi</class>
        <class>com.kuuhaku.model.persistent.shoukan.MatchHistory</class>
        <class>com.kuuhaku.model.persistent.shoukan.history.HistoryInfo</class>
        <class>com.kuuhaku.model.persistent.shoukan.history.HistoryPlayer</class>
        <class>com.kuuhaku.model.persistent.shoukan.history.HistoryTurn</class>
        <class>com.kuuhaku.model.persistent.shoukan.history.HistorySide</class>
        <class>com.kuuhaku.model.persistent.shoukan.history.HistorySlot</class>
        <class>com.kuuhaku.model.persistent.shoukan.FrameSkin</class>
        <class>com.kuuhaku.model.persistent.shoukan.SlotSkin</class>

        <!-- DUNGEON HUNTERS -->
        <class>com.kuuhaku.model.persistent.dunhun.Hero</class>
        <class>com.kuuhaku.model.persistent.dunhun.HeroStats</class>
        <class>com.kuuhaku.model.persistent.dunhun.Gear</class>
        <class>com.kuuhaku.model.persistent.dunhun.Unique</class>
        <class>com.kuuhaku.model.persistent.dunhun.Basetype</class>
        <class>com.kuuhaku.model.persistent.dunhun.GearAffix</class>
        <class>com.kuuhaku.model.persistent.dunhun.Affix</class>
        <class>com.kuuhaku.model.persistent.dunhun.Skill</class>
        <class>com.kuuhaku.model.persistent.dunhun.Monster</class>
        <class>com.kuuhaku.model.persistent.dunhun.Boss</class>
        <class>com.kuuhaku.model.persistent.dunhun.Event</class>
        <class>com.kuuhaku.model.persistent.dunhun.Dungeon</class>
        <class>com.kuuhaku.model.persistent.dunhun.Consumable</class>
        <class>com.kuuhaku.model.persistent.dunhun.GlobalDrops</class>
        <class>com.kuuhaku.model.persistent.dunhun.GearType</class>
        <class>com.kuuhaku.model.persistent.dunhun.RaceBonus</class>
        <class>com.kuuhaku.model.persistent.dunhun.DungeonRun</class>
        <class>com.kuuhaku.model.persistent.dunhun.RunModifier</class>
        <class>com.kuuhaku.model.persistent.dunhun.DungeonRunPlayer</class>
        <class>com.kuuhaku.model.persistent.dunhun.DungeonRunModifier</class>

        <!-- LOCALIZED -->
        <class>com.kuuhaku.model.persistent.localized.LocalizedItem</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedTitle</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedDescription</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedString</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedSlotSkin</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedBasetype</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedAffix</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedSkill</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedMonster</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedEvent</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedDungeon</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedConsumable</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedUnique</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedGearType</class>
        <class>com.kuuhaku.model.persistent.localized.LocalizedRunModifier</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.schema-generation.create-database-schemas" value="true"/>
            <property name="jakarta.persistence.sharedCache.mode" value="ALL"/>

            <property name="hibernate.jdbc.batch_size" value="100"/>
            <property name="hibernate.jdbc.fetch_size" value="400"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.show_sql" value="false"/>

            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="jcache"/>
            <property name="hibernate.javax.cache.missing_cache_strategy" value="create"/>
            <property name="hibernate.javax.cache.provider" value="com.github.benmanes.caffeine.jcache.spi.CaffeineCachingProvider"/>

            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.maximumPoolSize" value="100"/>
            <property name="hibernate.hikari.idleTimeout" value="10000"/>
            <property name="hibernate.hikari.connectionTimeout" value="30000"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="unreturnedConnectionTimeout" value="30"/>
            <property name="debugUnreturnedConnectionStackTraces" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.characterEncoding" value="utf8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
        </properties>
    </persistence-unit>
</persistence>
