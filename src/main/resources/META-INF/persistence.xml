<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="shiro_remote">

        <!-- provedor/implementacao do JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- entidade mapeada -->
        <class>com.kuuhaku.model.guildConfig</class>
        <class>com.kuuhaku.model.Member</class>
        <class>com.kuuhaku.model.CustomAnswers</class>
        <class>com.kuuhaku.model.Beyblade</class>
        <class>com.kuuhaku.model.Tags</class>
        <class>com.kuuhaku.model.PermaBlock</class>
        <class>com.kuuhaku.model.MonthWinner</class>
        <class>java.lang.String</class>

        <properties>
            <!-- dados da conexao -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://213.32.14.106:3306/OH-34179?serverTimezone=EST5EDT&amp;autoReconnect=true&amp;useUnicode=yes&amp;characterEncoding=UTF-8&amp;interactiveClient=true"/>

            <!--  propriedades do hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.format_sql" value="true"/>

            <!--  propriedade do C3P0 -->
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="3"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <property name="hibernate.c3p0.preferredTestQuery" value="SELECT 1"/>
            <property name="hibernate.c3p0.testConnectionOnCheckout" value="true"/>

            <!--  atualiza o banco, gera as tabelas se for preciso -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>

    <persistence-unit name="shiro_local">

        <!-- provedor/implementacao do JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- entidade mapeada -->
        <class>com.kuuhaku.model.guildConfig</class>
        <class>com.kuuhaku.model.Member</class>
        <class>com.kuuhaku.model.CustomAnswers</class>
        <class>com.kuuhaku.model.Beyblade</class>
        <class>com.kuuhaku.model.Tags</class>
        <class>com.kuuhaku.model.PermaBlock</class>

        <properties>
            <!-- dados da conexao -->
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>

            <!--  propriedades do hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect"/>
            <property name="hibernate.format_sql" value="true"/>

            <!--  propriedade do C3P0 -->
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="1"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            <property name="hibernate.c3p0.preferredTestQuery" value="SELECT 1"/>
            <property name="hibernate.c3p0.testConnectionOnCheckout" value="true"/>

            <!--  atualiza o banco, gera as tabelas se for preciso -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>