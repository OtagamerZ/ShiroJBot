<Configuration status="warn">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    pattern="%style{%d{dd MMM yyyy HH:mm:ss}{GMT-3}}{magenta} %style{PID %pid}{bright, blue} %style{[%tn]}{reverse} %highlight{%-5level %logger{36}.%M():%L}{FATAL=red blink bright, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=cyan} - %style{%msg}{white}%n%n"
                    disableAnsi="false"/>
        </Console>

        <RandomAccessFile name="InfoLog" fileName="logs/stacktrace.log" immediateFlush="false" append="false">
            <PatternLayout
                    pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level %logger{36}.%M():%L - %msg%n%n"
                    disableAnsi="false"/>
        </RandomAccessFile>

        <RandomAccessFile name="ErrorLog" fileName="logs/error.log" immediateFlush="false" append="false">
            <PatternLayout
                    pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level %logger{36}.%M():%L - %msg%n%n"
                    disableAnsi="false"/>
        </RandomAccessFile>

        <RandomAccessFile name="CrashLog" fileName="logs/crash.log" immediateFlush="false" append="false">
            <PatternLayout
                    pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level %logger{36}.%M():%L - %msg%n%n"
                    disableAnsi="false"/>
        </RandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="info" includeLocation="true">
            <AppenderRef ref="Console"/>

            <AppenderRef ref="InfoLog"/>
            <AppenderRef ref="ErrorLog" level="error"/>
            <AppenderRef ref="CrashLog" level="fatal"/>
        </Root>
    </Loggers>
</Configuration>
