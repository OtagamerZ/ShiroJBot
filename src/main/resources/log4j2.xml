<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT" follow="true">
			<PatternLayout
					pattern="%style{%d{dd MMM yyyy HH:mm:ss}{GMT-3}}{magenta} %style{PID %pid}{bright, blue} %style{[%tn]}{reverse} %highlight{%-5level%logger{36}.%M():%L}{FATAL=red blink bright, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=cyan} - %style{%msg}{white}%n%n"
					disableAnsi="false"/>
		</Console>

		<RollingFile name="Log" fileName="logs/stacktrace.log">
			<PatternLayout
					pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level%logger{36}.%M():%L - %msg%n%n"
					disableAnsi="false"/>
			<CronTriggeringPolicy schedule="0 0 0 * * ?"/>
			<DefaultRolloverStrategy>
				<Delete basePath="logs/" maxDepth="1">
					<IfFileName glob="*.log"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>

		<RollingFile name="ErrorLog" fileName="logs/error.log">
			<PatternLayout
					pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level%logger{36}.%M():%L - %msg%n%n"
					disableAnsi="false"/>
			<CronTriggeringPolicy schedule="0 0 0 * * ?"/>
			<DefaultRolloverStrategy>
				<Delete basePath="logs/" maxDepth="1">
					<IfFileName glob="*.log"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>

		<RollingFile name="CrashLog" fileName="logs/crash.log">
			<PatternLayout
					pattern="%d{dd MMM yyyy HH:mm:ss}{GMT-3} PID %pid [%tn] %-5level%logger{36}.%M():%L - %msg%n%n"
					disableAnsi="false"/>
			<CronTriggeringPolicy schedule="0 0 0 * * ?"/>
			<DefaultRolloverStrategy>
				<Delete basePath="logs/" maxDepth="1">
					<IfFileName glob="*.log"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>

	<Loggers>
		<root level="debug">
			<AppenderRef ref="Console" level="info"/>
			<AppenderRef ref="Log" level="info"/>

			<AppenderRef ref="ErrorLog" level="error"/>

			<AppenderRef ref="CrashLog" level="fatal"/>
		</root>
	</Loggers>
</Configuration>
